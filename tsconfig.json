{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "typeRoots": [ "./node_modules/@types" ],
    "esModuleInterop": true,
    "target": "es6",
    "allowJs": false,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "sourceMap": true,
    "outDir": "dist",
    "types": ["node", "jest"]
  },
  "lib": ["es2015"],
  "include": [
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "./dist/**/*",
    "./node_modules/**/*"
  ]
}